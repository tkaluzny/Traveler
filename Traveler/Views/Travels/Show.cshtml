@model Traveler.Models.Travel
@{
    ViewBag.Title = Model.Name;
}

<h2>@Model.Name</h2>
<hr />

<p>
    @Model.Description
</p>

<h3>Miejsca</h3>
<hr />
@if (Model.Places.Count > 0)
{

    var placesCount = Model.Places.Count > 3 ? 3 : Model.Places.Count;
    var placesColumnNumber = 12 / placesCount;


    <div class="row">
        @foreach (var place in Model.Places)
        {
            var photoFileName = "";
            if (place.Photos.Count > 0)
            {
                photoFileName = place.Photos.First().FileName;
            }

            <div class="col-sm-@placesColumnNumber">
                <a href="@Url.Action("Show", "Places", new { id = place.TravelID })">
                    <div class="thumbnail">
                        @if (photoFileName.IsEmpty())
                        {
                            <div class="no-photo-thumbnail">
                                <img src="~/Content/ic_landscape_black_48dp_2x.png">
                            </div>
                        }
                        else
                        {
                            <img src="~/uploads/@photoFileName">
                        }
                        <div class="caption">
                            <h3>@place.Name</h3>
                            <h5>@place.City.Name, @place.City.Country.Name</h5>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info" role="alert">Ta podróż nie ma żadnych miejsc :(</div>
}