@model IEnumerable<Traveler.Models.Travel>

@{
    ViewBag.Title = "Moje podróże";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Nowa podróż", "Create", null, new { @class = "btn btn-default" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edycja", "Edit", new { id = item.TravelID }) |
                @Html.ActionLink("Szczegóły", "Details", new { id = item.TravelID }) |
                @Html.ActionLink("Usuń", "Delete", new { id = item.TravelID })
            </td>
        </tr>
    }

</table>