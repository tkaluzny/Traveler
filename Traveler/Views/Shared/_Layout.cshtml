<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Traveler</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/photoswipe.css")
    @Styles.Render("~/Content/styles.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/lib/klass.min.js")
    @Scripts.Render("~/Scripts/code.photoswipe-3.0.5.min.js")
   

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Traveler", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated)
                    {
                    <li>@Html.ActionLink("Moje podróże", "Index", "Travels")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
                <form class="navbar-form navbar-right hidden-xs" role="search" action="@Url.Action("Index", "Search")">
                    <div class="form-group">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Szukaj" name="query" style="width: 120px;">
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                            </span>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @if (ViewBag.RenderOutsideContainer != null)
    {
        @RenderBody()
    }

    <div class="container body-content">
        @if (ViewBag.RenderOutsideContainer == null)
        {
            @RenderBody()
        }
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Traveler</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
