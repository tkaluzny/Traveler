@model Traveler.Models.UserData
@{
    ViewBag.Title = "Manage";
}


    <hr />
<h2>@Model.Nick</h2>
    <div class="col-md-2">
        @if(Model.Avatar.IsEmpty())
        {
            <img src="~/Content/ic_person_black_48dp_2x.png" class="img-thumbnail" height="250px" width="250px" />
        }
        else
        {
            <image src="~/uploads/@Model.Avatar" class="img-thumbnail" height="250px" width="250px" />
        }
    </div>
<div class="col-md-10">
    <dl class="dl" >
      
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>



        <dt>
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>



        <dt>
            @Html.DisplayNameFor(model => model.Male)
        </dt>
        <dd>
            @(Model.Male == 0 ? "Kobieta" : "Meżczyzna")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Age)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Age)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Country)
        </dd>
    </dl>
   
</div>
@Html.ActionLink("Edytuj profil", "Edit")
@Html.ActionLink("Zmień hasło", "ChangePassword")